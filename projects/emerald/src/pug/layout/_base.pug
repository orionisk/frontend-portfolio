include ../components/_header.pug
include ../components/_footer.pug

block variables
  - const path = self.publicPath ?? '';
  - const img = `${path}/assets/img`;
  - const icons = `${img}/icons`;

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    //- link(rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png")
    //- link(rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png")
    //- link(rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png")
    //- link(rel="manifest" href="/site.webmanifest")
    link(rel='preconnect' href='https://fonts.gstatic.com')
    link(href='https://fonts.googleapis.com/css2?family=Roboto:wght@400;700;900&family=Source+Sans+Pro:wght@400;600&display=swap' rel='stylesheet')
    if (self.publicPath)
      meta(name="robots" content="noindex")
    title #{title}
  body
    .page
      +header
      .content
        block content
      +footer
