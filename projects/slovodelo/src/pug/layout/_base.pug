include ../components/_header.pug
include ../components/_footer.pug

block variables
	- const path = self.publicPath ?? '';
	- const img = `${path}/assets/img`;
	- const icons = `${img}/icons`;

doctype html
html(lang="ru")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		if (self.publicPath)
			meta(name="robots" content="noindex")
		title #{title}
	body
		.page
			+header
			.content
				block content
			+footer
