extends _base
include ~views/utils/_css-defer

block append variables

block append head

block append style
  link(rel="stylesheet", href=require("~styles/tailwind/tailwind.scss"))
  link(rel="stylesheet", href=require("~styles/vendors/vendors.scss"))
  link(rel="stylesheet", href=require("~styles/main.scss"))
  //- +css-defer(require('~styles/vendors/vendors.scss'))
  //- +css-defer(require('~styles/main.scss'))

block append head

include _footer
include _header
include ~views/sections/_special

block body
  .page
    //- App header
    +header

    //- Main content
    main.content
      block content

    //- App footer
    +s-special
    +footer
block append script
  script(src=require("~js/main.js"), defer)
